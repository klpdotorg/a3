    android:keyHeight="13.5%p">
<!--
    android:horizontalGap="0.50%p"
    android:verticalGap="0.50%p"
    NOTE When we add a horizontalGap in pixels, this interferes with keyWidth in percentages adding up to 100%
    NOTE When we have a horizontalGap (on Keyboard level) of 0, this make the horizontalGap (on Key level) to move from after the key to before the key... (a bug?) 
 -->

    <!-- The codes assigned are adhoc numbers.
        1000 - 1009 for Kannada
        2000 - 2009 for Hindi
        3000 - 3009 for English
        4000 - 4009 for Urdu
        5000 - 5009 for Odia
        6000 - 6009 for Telugu
        7000 - 7009 for Gujarati
        8000 - 8009 for Malayalam -->

    <Row>
        <Key android:codes="8000"    android:keyLabel="൦" android:keyEdgeFlags="left" />
        <Key android:codes="8001"    android:keyLabel="൧" />
        <Key android:codes="8002"    android:keyLabel="൨" />
        <Key android:codes="8003"    android:keyLabel="൩" />
        <Key android:codes="8004"    android:keyLabel="൪" />
        <Key android:codes="8005"    android:keyLabel="൫" />
        <Key android:codes="8006"    android:keyLabel="൬" />
        <Key android:codes="8007"    android:keyLabel="൭" />
        <Key android:codes="8008"    android:keyLabel="൮" />
        <Key android:codes="8009"    android:keyLabel="൯" />
        <Key android:codes="158"    android:keyLabel="." />
        <Key android:codes="55002" android:keyIcon="@drawable/sym_keyboard_left" android:isRepeatable="true" />
        <Key android:codes="55003" android:keyIcon="@drawable/sym_keyboard_right" android:isRepeatable="true" />
