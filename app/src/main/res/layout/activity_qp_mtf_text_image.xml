        android:id="@+id/imageViewChoice4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/mtf_vertical_optionbox_sidemargin"
        android:layout_marginStart="@dimen/mtf_vertical_optionbox_sidemargin"
        android:layout_marginTop="@dimen/mtf_vertical_optionbox_topmargin"
        android:paddingLeft="@dimen/mtf_optionbox_image_padding"
        android:paddingRight="@dimen/mtf_optionbox_image_padding"
        android:paddingTop="@dimen/mtf_optionbox_image_padding"
