        android:background="@drawable/optionbox"
        android:gravity="fill_vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline_beam5"
        app:layout_constraintEnd_toStartOf="@+id/guideline_pillar4"
        app:layout_constraintStart_toEndOf="@+id/guideline_pillar3"
        app:layout_constraintTop_toTopOf="@+id/guideline_beam4" />

